<% layout('layout/boilerplate') %>
  <link rel="stylesheet" href="/stylesheets/stars.css">
  <div class="row">
    <div class="col-6">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% campsite.images.forEach((img,i)=> {%>
            <div class="carousel-item <%= (i===0)?'active' : '' %>">
              <img src="<%=img.url%>" class="d-block w-100" alt="">
            </div>
            <% }) %>
        </div>
        <% if(campsite.images.length> 1){ %>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <% } %>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%=campsite.title%>
          </h5>
          <p class="card-text">
            <%=campsite.description%>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= campsite.location %>
          </li>
          <li class="list-group-item">Submitted by <%= campsite.author.username %>
          </li>
          <li class="list-group-item">&#8377;<%= campsite.price %>/night</li>
        </ul>
        <% if(currentUser && campsite.author.equals(currentUser)){ %>
          <div class="card-body">
            <a class="btn btn-warning" href="<%=campsite._id%>/edit" class="card-link">Edit</a>
            <form class="d-inline" action="/campgrounds/<%=campsite._id%>?_method=DELETE" method="post">
              <button class="btn btn-danger">Delete Campsite</button>
            </form>
          </div>
          <% } %>
      </div>
    </div>
    <% if(currentUser) {%>
      <div class="col-6">
        <h2>Leave a review!</h2>
        <form action="/campgrounds/<%=campsite._id%>/reviews" method="post" class="mb-3 validated-form" novalidate>
          <div class="rating" style="width:500px">
            <input type="radio" id="star5" name="review[rating]" value="5" />
            <label for="star5"></label>
            <input type="radio" id="star4" name="review[rating]" value="4" />
            <label for="star4"></label>
            <input type="radio" id="star3" name="review[rating]" value="3" />
            <label for="star3"></label>
            <input type="radio" id="star2" name="review[rating]" value="2" />
            <label for="star2"></label>
            <input type="radio" id="star1" name="review[rating]" value="1" />
            <label for="star1"></label>




          </div>
          <div class="mb-3">
            <label class="form-label" for="body" style="font-size: x-large;">Rating:</label>
            <textarea class="form-range" placeholder="Leave a Review!!.." name="review[body]" id="body" required
              style="height: 100px;"></textarea>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a review
            </div>
          </div>
          <button class="btn btn-success">Submit</button>
        </form>
        <% for(let review of campsite.review){%>
          <div class="card">
            <div class="mb-3 card-body">
              <p class="starability-result" data-rating="<%= review.rating %>">
                Rated: <%= review.rating %> stars
              </p>
              <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %>
              </h6>
              <p class="card-text">
                Review: <%=review.body %>
              </p>
              <% if(currentUser && review.author.equals(currentUser)){ %>
                <form action="/campgrounds/<%=campsite._id %>/reviews/<%=review._id%>?_method=DELETE" method="post">
                  <button class="btn btn-danger btn-sm">Delete</button>
                </form>
                <% } %>
            </div>
          </div>
          <% } %>
      </div>
      <% } %>
  </div>