<% layout('layout/boilerplate') %>
    <h1>Campgrounds</h1> 
    <div>
        <%for(let campsite of campground){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=//campsite.images[0].url%>">
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <%= campsite.title %>
                        </h5>
                        <p class="card-text">
                            <%=campsite.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campsite.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="campgrounds/<%=campsite._id%>">View <%=campsite.title%></a>
                    </div>
                </div>
            </div>
        <%}%>
</div>